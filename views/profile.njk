{% extends "base2.njk" %}

{% block title %}
<title>profile</title>
{% endblock %}

{% block styles %}
    <link href="/src/css/mothanna_style.css" rel="stylesheet" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      .header {
        padding: 0% 5% !important
      }
      .space{
        height: 25vh;
        width: 100%;
        height: 300px; 
        background-color: black; 
        background-image: url({{club.background}}); 
        background-size: contain; 
        background-repeat: no-repeat; 
        background-position: center; 
      }
    </style>
{% endblock %}

{% block scripts %}
    <script src="/src/js/search-header.js"></script>
    <script src="/src/js/tab-nav3.js"></script>
    <script src="/src/js/follow-btn.js"></script>
{% endblock %}

{% block pageName %}
{% endblock %}

{% block tapnav %}
{% endblock %}

{% block content %}
    <div class="space"></div>
    <img src="{{club.avatar}}" class="dot">
    <div class="clubInfo">
      <h2 class="item1">{{club.name}}</h2>
      {% if owner %}
      <button type="button" id="edit-btn" class="btn btn-outline-primary item2">
        Edit profile
      </button>
      {% else %}      
      <button type="button" class="btn btn-primary item2 follow-btn">Follow</button>
      {% endif %}
      <label style="color: #595959">{{club.handler}}</label>
      <br />
      <p class="item1">{{club.bio}}</p>
      <br />
      <p class="item1"><span style="color: #1b08da">{{club.followers}}</span> Followers&nbsp;&nbsp;&nbsp;<span style="color: #1b08da">{{club.events}}</span> Events</p>
    </div>
    <div class="tab-nav">
      <a class="active" href="/" id="sec1tog">Upcoming</a>
      <a class="" href="/" id="sec2tog">All</a>
      <a class="" href="/" id="sec3tog">About</a>
    </div>
    <section id="sec1">
    </section>
    <section id="sec2" hidden>
    </section>
    <section id="sec3" hidden>
      <div class="event-card">
        <p>{{club.about}}</p>
      </div>
    </section>
{% endblock %}