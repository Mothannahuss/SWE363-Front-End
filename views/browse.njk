{% extends "base2.njk" %}

{% block title %}
<title>browse</title>
{% endblock %}

{% block styles %}
    <link href="/src/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/src/css/abdullah_style.css" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />    
{% endblock %}

{% block scipts %}
    <script src="/src/js/search-header.js"></script>
    <script src="/src/js/follow-btn.js"></script>
    <script src="/src/js/menu.js"></script>
{% endblock %}

{% block pageName %}
<h1>Browse Clubs</h1>
{% endblock %}

{% block tapnav %}
{% endblock %}

{% block content %}
  <div class="selection-container">
      <select class="form-select" aria-label="Default select example" id="categories">
        <option selected>All</option>
        {% for category in categories %}
          <option value="{{category}}">{{category}}</option>
        {% endfor %}
      </select>
    {% for club in clubs %}
    </div>
        <div class="club-card">
      <div class="event-avatar"></div>
      <div class="club-detail">
        <h2><a href="./profile.html">{{club.name}}</a></h2>
        <p>{{club.bio}}</p>
      </div>
      {% if club.name in followed_clubs %}
        <form action="/browse/unfollow" method="get">
        <input hidden name="name" value="{{ club.name }}"/>
        <button class="btn btn-outline-primary follow-btn">Unfollow</button>
        </form>
      {% else %}
        <form action="/browse/follow" method="get">
        <input hidden name="name" value="{{ club.name }}"/>
        <button class="btn btn-outline-primary follow-btn">Follow</button>
        </form>
      {% endif %}

    </div>
    {% endfor %}

    <scipts>
    </scipts>
{% endblock %}

