{% extends "base2.njk" %}

{% block title %}
<title>notification</title>
{% endblock %}

{% block styles %}
<link href="/src/css/style.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="/src/css/abdullah_style.css" type="text/css" />
<link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    rel="stylesheet"
/>

<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>
<link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
    rel="stylesheet"
/>
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>
{% endblock %}

{% block scripts %}
<script src="/src/js/search-header.js"></script>
<script src="/src/js/tab-nav2.js"></script>
<script src="/src/js/notToggler.js"></script>
{% endblock %}

{% block pageName %}
<h1>Notification</h1>
{% endblock %}

{% block tabNav %}
<div class="tab-nav">
    <a id="sec1tog" href="/" class="active">New</a>
    <a id="sec2tog" href="/">Previous</a>
</div>
{% endblock %}
    
{% block content %}
{% for n in notifications %}
  {% if not n.read %}
    <section id="sec1">
      <div class="post-notification">
        <div class="event-avatar"></div>
        <div class="post-content">
          <h2 class="new-post"><a href="./eventDetails.html">{{ n.event.title }}</a></h2>
          <p>{{ n.event.club_name }} posted an event</p>
        </div>
      </div>
    </section>
  {% else %}
    <section id="sec2" hidden>
      <div class="post-notification">
        <div class="event-avatar"></div>
        <div class="post-content">
          <h2 class="new-post"><a href="./eventDetails.html">{{ n.event.title }}</a></h2>
          <p>{{ n.event.club_name }} posted an event</p>
        </div>
      </div>
    </section>
  {% endif %}
{% endfor %}
{% endblock %}