<!DOCTYPE html>
<html lang="en-us">
  <head>
    <title>Edit Club - University Central Clubs</title>
    <link href="/src/css/omarStyle.css" rel="stylesheet" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/src/js/post-val.js"></script>
    <script src="/src/js/editProfile.js"></script>
  </head>

  <body>
    <div class="container">
      <header class="row mt-5">
        <div class="col-8">
          <h1 class="pageTitle">Edit Club</h1>
          <div id="logoBox"></div>
        </div>
        <div class="col-4 d-flex align-self-center" id="newPostButtons">
          <button
            class="btn btn-outline-primary headerButton text-end m-1"
            id="cancelPost"
          >
            <p>Cancel</p>
          </button>
          <button
            class="btn btn-primary headerButton text-end m-1"
            type="submit"
            form="newPost"
            id="submitPost"
          >
            <p>Edit</p>
          </button>
        </div>
      </header>
      <main>
        <section>
          <form id="newPost">
            <div>
              <label for="handler" class="form-label">Handler</label>
              <div>
                <input
                  type="text"
                  name="handler"
                  id="handler"
                  class="form-control"
                  value={{club.handler}}
                  required
                />
                <input
                type="hidden"
                name="_id"
                id="_id"
                value="{{ club._id }}"
                required
              />
                <div class="invalid-feedback"></div>
              </div>
            </div>
            <div>
              <label for="bio" class="form-label">Bio</label>
              <div>
                <textarea
                  name="bio"
                  id="bio"
                  rows="3"
                  cols="18"
                  class="form-control"
                >{{club.bio}}</textarea>
                <div class="invalid-feedback"></div>
              </div>
            </div>
            <div>
              <label for="about" class="form-label">About</label>
              <div>
                <textarea
                  name="about"
                  id="about"
                  rows="3"
                  cols="18"
                  class="form-control"
                >{{club.about}}</textarea>
                <div class="invalid-feedback"></div>
              </div>
            </div>
            <div>
              <label for="categories" class="form-label">Categories</label>
              <div>
                <input
                  type="text"
                  name="categories"
                  id="categories"
                  class="form-control"
                  value={{club.categories}}
                  required
                />
                <div class="invalid-feedback"></div>
              </div>
            </div>
          </form>
        </section>
      </main>
    </div>
  </body>
</html>
