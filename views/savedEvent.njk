{% extends "base2.njk" %}

{% block title %}
<title>saved event</title>
{% endblock %}

{% block styles %}
<link href="../public/src/css/style.css" rel="stylesheet" type="text/css" />
<link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
    rel="stylesheet"
/>
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>
<link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    rel="stylesheet"
/>

<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>
{% endblock %}

{% block scripts %}
<script src="../public/src/js/search-header.js"></script>
<script src="../public/src/js/tab-nav2.js"></script>
{% endblock %}

{% block pageName %}
<h1>Saved Events</h1>
{% endblock %}

{% block tabNav %}
<div class="tab-nav">
    <a id="sec1tog" href="/" class="active">Upcoming</a>
    <a id="sec2tog" href="/">All</a>
</div>
{% endblock %}

{% block content %}
    <section id="sec1">
    {% for event in events %}
    {% if done %}        {# should be boolean variable to check if the event is done  #}
    <div class="event-card">
        <div class="event-avatar"></div>
        <div class="event-content">
        <div class="event-details">
            <a class="event-club" href="/">{{ event.club_name }}</a>
            <h2 class="event-title">{{ event.title }}</h2>
            <div class="event-info">
                <p><i class="fas fa-calendar-alt"></i>{{ event.date}}, {{event.date}}</p>
                <p><i class="fas fa-clock"></i> {{ event.date }}</p>
                <p><i class="fas fa-map-marker-alt"></i> {{event.location}}</p>
            </div>
        </div>
        <a class="view-event-btn" href="./events/{{event._id}}">View Event</a>
        </div>
    </div>
    {% endif %}
    {% endfor %}   
    </section>
    <section id="sec2" hidden>
    {% for event in events %}    {# i think it should be a list or an array not a variable #}
    <div class="event-card">
        <div class="event-avatar"></div>
        <div class="event-content">
        <div class="event-details">
            <a class="event-club" href="/">{{ event.club_name }}</a>
            <h2 class="event-title">{{ event.title }}</h2>
            <div class="event-info">
                <p><i class="fas fa-calendar-alt"></i>{{ event.date}}, {{event.date}}</p>
                <p><i class="fas fa-clock"></i> {{ event.date }}</p>
                <p><i class="fas fa-map-marker-alt"></i> {{event.location}}</p>
            </div>
        </div>
        <a class="view-event-btn" href="./events/{{event._id}}">View Event</a>
        </div>
    </div>
    {% endfor %}
{% endblock %}